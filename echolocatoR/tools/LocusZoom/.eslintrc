{
    "extends": "eslint:recommended",
    "rules": {
        "no-console": "off",
        "indent": [
            2,
            4,
            {
                "FunctionExpression": { "parameters": "first" },
                "CallExpression": { "arguments": "first" }
            }
        ],
        "space-infix-ops": "error",
        "quotes": [
            2,
            "single",
            {
                "avoidEscape": true
            }
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "eqeqeq": [
            2,
            "smart"
        ],
        "no-unused-vars": [
            "error",
            { "args": "none" }
        ],
        "no-trailing-spaces": "error",
        "curly": "error",
        "space-before-blocks": "error",
        "eol-last": "error"
    },
    "globals": {
        "XDomainRequest": false
    },
    "env": {
        "browser": true
    }
}
